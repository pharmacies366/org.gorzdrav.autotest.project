    <listeners>
        <listener class-name="listener.retry.AnnotationTransformer"/>
    </listeners>

    <test name="Web тесты" group-by-instances="false" preserve-order="false" enabled="true">
        <packages>
            <package name="web.*"/>
        </packages>
    </test>

    <test name="Мобильная эмуляция тестов" group-by-instances="false" preserve-order="false" enabled="true">
        <packages>
            <package name="mobile.*"/>
        </packages>
    </test>
</suite>